<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    app:cardElevation="8dp"
    android:layout_margin="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/RSVP_PAGE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:background="@drawable/rounded_edge"
            android:text="RSVP Page"
            >


        </TextView>
        <TextView
            android:id="@+id/title"
            android:layout_below="@+id/RSVP_PAGE"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Title..........."
            android:textSize="30dp"
            android:textColor="@color/black"
            >
        </TextView>

        <TextView
            android:id="@+id/participationLimit"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Limits of Participants: 50"
            android:textSize="20dp"
            android:textColor="@color/seal_grey"
            >
        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/description_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participationLimit"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="15dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/participationLimit"
                android:layout_margin="10dp"
                android:text="Description Here: .........."
                android:textColor="@color/charcoal_grey"
                android:textSize="20dp"></TextView>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@+id/description_cardView"
            android:layout_centerHorizontal="true"
            android:text="Join"

            >
        </Button>
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/join_button"
            android:layout_centerHorizontal="true"
            android:text="Back"

            >
        </Button>
        <Button
            android:id="@+id/feedback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/back"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:text="Submit FeedBack"

            >
        </Button>



    </RelativeLayout>





</androidx.cardview.widget.CardView>